extends layout

block content
    h1 Search Results for "#{query}"
    if movies.length > 0
        .movie-grid
            each movie in movies
                .movie-card
                    img(src=`https://image.tmdb.org/t/p/w500${movie.poster_path}`, alt=movie.title)
                    .info
                        h3= movie.title
                        p= movie.overview
                        a(href=`/movie/${movie.id}`) More details
    else
        p No movies found. Please try another search term.
